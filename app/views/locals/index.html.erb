<h1>Listing locals</h1>

<table>
  <thead>
    <tr>
      <th>Address</th>
      <th>City</th>
      <th>State</th>
      <th>Zip</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @locals.each do |local| %>
      <tr>
        <td><%= local.address %></td>
        <td><%= local.city %></td>
        <td><%= local.state %></td>
        <td><%= local.zip %></td>
        <td><%= link_to 'Show', [@user, local] %></td>
        <td><%= link_to 'Edit', edit_user_local_path(@user, local) %></td>
        <td><%= link_to 'Destroy', local, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Local', new_user_local_path(@user) %>
