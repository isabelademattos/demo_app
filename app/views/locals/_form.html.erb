<%= form_for([@user, @local]) do |f| %>
  <% if @local && @local.errors.any? %>
      <div id="error_explanation">
          <h2><%= pluralize(@local.errors.count, "erro(s)") %></h2>
          <ul><% @local.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
              <% end %>
          </ul>
      </div>
  <% end %>

  <div class="field">
    <%= f.label :address %><br>
    <%= f.text_field :address %>
  </div>

  <div class="field">
    <%= f.label :number %><br>
    <%= f.text_field :number %>
  </div>

  <div class="field">
    <%= f.label :compl %><br>
    <%= f.text_field :compl %>
  </div>

  <div class="field">
    <%= f.label :district %><br>
    <%= f.text_field :district %>
  </div>

  <div class="field">
    <%= f.label :city %><br>
    <%= f.text_field :city %>
  </div>

  <div class="field">
    <%= f.label :state %><br>
    <%= f.select :state, UsersController::STATES %>
  </div>

  <div class="field">
    <%= f.label :zip %><br>
    <%= f.text_field :zip %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
