<h1>Listing users</h1>

<%= form_tag users_path, method: :get do %>
  <div>
    <%= text_field_tag :name_search, params[:name_search], placeholder: "Search by name", autofocus: true, class: "search_by_name" %>
    <%= date_field_tag :inicial_date, Date.today.beginning_of_month, autofocus: true, class: "search_date" %>
    <%= date_field_tag :final_date, Date.today.end_of_month, autofocus: true, class: "search_date" %>
    <%= submit_tag t('.index', :default => "Search"), class: "search_buttom" %>
  </div>
<% end %>

<br/>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th></th>
      <th>Email</th>
      <th></th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td> | </td>
        <td><%= user.email %></td>
        <td> | </td>
        <td><%= link_to 'Show', user %></td>
        <td><%= link_to 'Edit', edit_user_path(user) %></td>
        <td><%= link_to 'Delete', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New User', new_user_path %>
