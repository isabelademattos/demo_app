  </div>

  <div class="field">
    <%= f.label :gender %><br>
    <%= f.select :gender, ['F', 'M']%>
  </div>

  <div class="field">
    <%= f.label :email %><br>
    <%= f.text_field :email %>
  </div>

  <div class="field">
    <%= f.label 'Receive e-mails' %><br>
    <%= f.check_box :email_messages %>
  </div>

